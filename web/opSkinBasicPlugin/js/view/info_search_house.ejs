
<div id="info-search">
    <form action="searchRentHouse" class="form-search-rent-house" method="post">
        <div id="info-search-box">
            <div class="grouper">
                <div class="sel-rent-house">
                    <p class="house-info-form-title">Từ khóa</p>
                    <%if(keyword ==''){%>
                      <input class="sel-keyword" name="keyword" value="" />
                    <%}else{%>
                      <input class="sel-keyword" name="keyword" value="<%=keyword%>" />
                    <%}%>
                </div>
                <div class="sel-rent-house">
                    <p class="house-info-form-title">Ngày đăng</p>
                    <select class="sel-time-post" name="time_post">
                        <option value="">Ngày đăng</option>
                        <option value="1">1 ngày trước</option>
                        <option value="2">2 ngày trước</option>
                        <option value="3">3 ngày trước</option>
                        <option value="4">1 tuần trước </option>
                        <option value="5">1 tháng trước</option>
                    </select>
                </div>

                <div class="sel-rent-house">
                    <p class="house-info-form-title">Mức giá</p>
                    <select class="sel-price-house" name="price">
                        <option value="">Mức giá</option>
                        <option value="1"> < 1 triệu </option>
                        <option value="2"> 1 - 3 triệu </option>
                        <option value="3"> 3 - 5 triệu </option>
                        <option value="4"> 5 - 10 triệu </option>
                        <option value="5"> > 10 triệu </option>
                    </select>
                </div>
            </div>
        </div>
        
        <div id="top-search-box" class="hidden">
            <div class="grouper">    
                <div class="sel-rent-house">
                    <p class="house-info-form-title">Diện tích</p>
                    <select class="sel-area" name="area">
                        <option value="">Diện tích</option>
                        <option value="1">Dưới 30 m2</option>
                        <option value="2">30 - 50 m2</option>
                        <option value="3">50 - 80 m2 </option>
                        <option value="4">80 - 100 m2</option>
                        <option value="5">150 - 200 m2</option>
                    </select>
                </div>

                <div class="sel-rent-house">
                    <p class="house-info-form-title">Số phòng</p>
                    <select class="sel-num-room" name="num_room">
                        <option value=""> Số phòng </option>
                        <option value="1"> 1 phòng </option>
                        <option value="2">2 phòng </option>
                        <option value="3">3 phòng </option>
                        <option value="4">4 phòng </option>
                        <option value="5">5 phòng</option>
                    </select>
                </div>

                <div class="sel-rent-house">
                    <p class="house-info-form-title">Hướng nhà</p>
                    <select class="sel-direction" name="direction">
                        <option value=""> Chọn hướng nhà</option>
                        <option value="1">Đông - Nam</option>
                        <option value="2">Tây - Bắc</option>
                        <option value="3">Đông - Bắc</option>
                    </select>
                </div>
            </div>     
        </div>

        <div id="search-buttons">
            <div id="button-1">
                <a class="pulldown-button ok-button" id="top-search">Tìm kiếm nâng cao </a>
            </div>

            <div id="button-2">
                <input type="submit" name="base-search-button" id="search_rh_button" value=" Tìm kiếm "  class="ok-button" />
            </div>
        </div>
    </form>
</div>
<div class="show_frm_search"></div>
<div id="total_search"></div>
<div class="clear"></div>
<div id="result-search"></div>